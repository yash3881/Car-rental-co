<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= companyName %> - Car Rental Website</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
</head>
<body>
    <header>
        <div class="logo">
            <i class="bx bxs-car"></i>
            <span><%= companyName %></span>
        </div>
        
        <div class="bx bx-menu" id="menu-icon"></div>
        
        <ul class="navbar">
            <li><a href="#home">Home</a></li>
            <li><a href="#ride">Rides</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#reviews">Reviews</a></li>
            <li><a href="#newsletter">Contact Us</a></li>
        </ul>
    </header>

    <section class="home" id="home">
        <div class="text">
            <h1>Looking To Rent A Car</h1>
            <p>Making Your Car Rental Journey Easy</p>
        </div>

        <div class="main-image" id="main-image">
            <img src="/img/main.jpg" alt="Main Image">
        </div>
    </section>

    <section class="services" id="services">
        <div class="heading">
            <span>Best Services</span>
            <h1>Explore Our Top Deals<br>From Top-Rated Dealers</h1>
        </div>
        <div class="services-container">
            <% cars.forEach(function(car) { %>
                <div class="box">
                    <div class="box-img">
                        <img src="<%= car.image %>" alt="<%= car.name %>">
                    </div>
                    <p><%= car.year %></p>
                    <h3><%= car.name %></h3>
                    <h2><%= car.price %> | <%= car.monthlyRent %><span>/month</span></h2>
                    <a href="#" class="btn">Rent Now</a>
                </div>
            <% }); %>
        </div>
    </section>

    <section class="reviews" id="reviews">
        <div class="heading">
            <h1>What Our Customers Say</h1>
        </div>
        <div class="reviews-container">
            <% reviews.forEach(function(review) { %>
                <div class="review-box">
                    <div class="review-img">
                        <img src="<%= review.image %>" alt="<%= review.name %>">
                    </div>
                    <h3><%= review.name %></h3>
                    <div class="stars">★★★★★</div>
                    <p><%= review.message %></p>
                </div>
            <% }); %>
        </div>
    </section>

    <footer>
        <p>&copy; 2023 Your Company. All rights reserved.</p>
    </footer>

    <script src="main.js"></script>
</body>
</html>
